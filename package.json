{
    "name": "discord-lite-desktop",
    "version": "1.0.0",
    "description": "A modern Discord-like desktop chat application",
    "main": "src/main/index.ts",
    "author": "Your Name",
    "license": "MIT",
    "private": true,
    "scripts": {
      "dev": "vite",
      "build": "tsc && vite build && electron-builder",
      "preview": "vite preview",
      "electron": "electron .",
      "electron:dev": "concurrently \"npm run dev\" \"npm run electron:dev:ts\"",
      "electron:dev:ts": "ts-node-esm src/main/index.ts",
      "build:win": "npm run build && electron-builder --win",
      "build:mac": "npm run build && electron-builder --mac",
      "build:linux": "npm run build && electron-builder --linux",
      "dist": "electron-builder",
      "type-check": "tsc --noEmit",
      "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-router-dom": "^6.20.0",
      "axios": "^1.6.2",
      "socket.io-client": "^4.7.2",
      "zustand": "^4.4.7",
      "@radix-ui/react-avatar": "^1.0.4",
      "@radix-ui/react-dialog": "^1.0.5",
      "@radix-ui/react-dropdown-menu": "^2.0.6",
      "@radix-ui/react-label": "^2.0.2",
      "@radix-ui/react-popover": "^1.0.7",
      "@radix-ui/react-scroll-area": "^1.0.5",
      "@radix-ui/react-separator": "^1.0.3",
      "@radix-ui/react-slot": "^1.0.2",
      "@radix-ui/react-tooltip": "^1.0.7",
      "class-variance-authority": "^0.7.0",
      "clsx": "^2.0.0",
      "tailwind-merge": "^2.1.0",
      "lucide-react": "^0.294.0",
      "react-hook-form": "^7.48.2",
      "@hookform/resolvers": "^3.3.2",
      "zod": "^3.22.4",
      "date-fns": "^2.30.0",
      "react-hot-toast": "^2.4.1",
      "framer-motion": "^10.16.16"
    },
    "devDependencies": {
      "electron": "^27.1.3",
      "electron-builder": "^24.9.1",
      "@types/react": "^18.2.43",
      "@types/react-dom": "^18.2.17",
      "@types/node": "^20.10.4",
      "typescript": "^5.3.3",
      "@typescript-eslint/eslint-plugin": "^6.14.0",
      "@typescript-eslint/parser": "^6.14.0",
      "@vitejs/plugin-react": "^4.2.1",
      "vite": "^5.0.8",
      "vite-plugin-electron": "^0.15.4",
      "vite-plugin-electron-renderer": "^0.14.5",
      "concurrently": "^8.2.2",
      "cross-env": "^7.0.3",
      "tailwindcss": "^3.3.6",
      "postcss": "^8.4.32",
      "autoprefixer": "^10.4.16",
      "@tailwindcss/forms": "^0.5.7",
      "eslint": "^8.55.0",
      "eslint-plugin-react-hooks": "^4.6.0",
      "eslint-plugin-react-refresh": "^0.4.5"
    },
    "build": {
      "appId": "com.yourcompany.discord-lite",
      "productName": "Discord Lite",
      "directories": {
        "output": "release"
      },
      "files": [
        "dist",
        "dist-electron"
      ],
      "mac": {
        "category": "public.app-category.social-networking",
        "icon": "public/icon.icns"
      },
      "win": {
        "target": "nsis",
        "icon": "public/icon.ico"
      },
      "linux": {
        "target": "AppImage",
        "icon": "public/icon.png"
      }
    }
  }